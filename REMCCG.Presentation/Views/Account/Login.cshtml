@model REMCCG.Application.Common.Models.LoginRequest
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_loginLayout.cshtml";
}

<div class="login">
    <div class="login-form">
        <h1>Sign In</h1>
        <br>
        <form method="post">
            <div class="errors" asp-validation-summary="All" ></div>

            <div class="form-group">
                <div class="icon"><i class="fas fa-envelope"></i></div>
                <input asp-for="Email" id="username" autocomplete="off" placeholder="Email Address" autocomplete="off" required />
            </div>

            <div class="form-group">
                <div class="icon"><i class="fas fa-lock"></i></div>
                <input asp-for="Password" id="password" autocomplete="new-password" placeholder="Password" autocomplete="off" required />
            </div>

            <div class="y">
                <div class="Rme">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>

                <div class="forgot-password">
                    <p>Forgot password?</p>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Login"/>
            </div>

            <div class="end">
                <p>Don't have an account? <a asp-area="" asp-controller="Account" asp-action="Register">Sign Up</a></p>
                <p>Or Sign In with:</p>
            </div>

            <div class="social-links">
            <!-- Facebook -->
            <i class="fab fa-facebook-f fa-2x" style="color: #3b5998;"></i>

            <!-- Twitter -->
            <i class="fab fa-twitter fa-2x" style="color: #55acee;"></i>

            <!-- Google -->
            <i class="fab fa-google fa-2x" style="color: #dd4b39;"></i>

            <!-- Instagram -->
            <i class="fab fa-instagram fa-2x" style="color: #ac2bac;"></i>
            </div>

        </form>
    </div>
</div>


<!----- Java script ----->

<script>

    const toggleNavBtn = document.getElementById("menu-toggle");
    const nav = document.querySelector(".menu");

    toggleNavBtn.addEventListener("click", function () {
        nav.classList.toggle("show-menu");
    });

</script>