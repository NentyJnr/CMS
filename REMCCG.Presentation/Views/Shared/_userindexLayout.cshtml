@using System.Security.Claims;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMS - Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/userindex.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
            <div class="title">
                <h1>CMS</h1>
            </div>
            <button id="menu-toggle"><i class="fa fa-bars"></i></button>
            <div class="menu">
                <nav>
                <ul class="navbar">
                        <li>
                            <a asp-area="" asp-controller="User" asp-action="UserIndex" asp-route-userId="@User.FindFirstValue(ClaimTypes.NameIdentifier)">Home</a>
                        </li>
                    </ul>
                </nav>
                <nav class="user-logout">
                <div class="user"><p asp-area="">@User.FindFirstValue(ClaimTypes.Email)</p></div>
                <ul>
                    <li>
                        <a asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                </ul>
                </nav>
            </div>
    </header> 

    <div class="container">
        <main role="main" class="main">
        <div class="Userindex">
            <div class="sidebar">
                <div class="user">
                    <div><i class="bi bi-person-circle"></i></div>
                    <h2 class="name">User</h2>
                </div>
                <div class="navigation">
                    <ul>
                        <li>
                            <a asp-area="" asp-controller="AttendanceRecord" asp-action="Index">Attendance Records</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="BlogPost" asp-action="Index">Blog Posts</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Department" asp-action="Index">Departments</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Expense" asp-action="Index">Expenses</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="FunctionalDepartment" asp-action="Index">Functional Departments</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="ImageGallery" asp-action="Index">Image Galleries</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Member" asp-action="Index">Members</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Membership" asp-action="Index">Memberships</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Remittance" asp-action="Index">Remittances</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Report" asp-action="Index">Reports</a>
                        </li>
                        <!-- Add more navigation links as needed -->
                    </ul>
                </div>
            </div>
            @RenderBody()
        </div>
        </main>
    </div>

    <footer>
        <div>
            &copy; 2023 - CMS
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
